	$(document).ready(function () {
		$("#maHoaDon").keydown(function () {
			var SearchText = $(this).val();
			
			$.ajax({
				type: "Post",
				url: "/Accountant/Home/GetSearchRecord?SearchText=" + SearchText,
				contentType: "html",
				success: function (response) {
					$("#HoaDonRow").html(response);
				}
			})

