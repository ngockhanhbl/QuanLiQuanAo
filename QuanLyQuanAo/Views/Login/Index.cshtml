<script>
	var xuly = function () {
		var data = $("#idLogin").serialize();

		if (!$("#idLogin").valid()) {
			return false;
		}

		$.ajax({
			type: "Post",
			url: "/Login/KiemTraDangNhap",
			data: data,
			success: function (quyen) {
				if (quyen == "Admin" ) {
					window.location.href = "/Admin";
				} else if (quyen == "Accountant") {
					window.location.href = "/Accountant";
				} else if (quyen = "Warehouse") {
					window.location.href = "/WarehouseStaff";
				} else
					alert(quyen);
				//
			}
		})
	}
</script>

